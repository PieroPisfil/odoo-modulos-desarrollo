<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('button js_invoice')]" position="after">
            <div t-if="env.pos.config.invoice_journal_factura_id" class="button js_invoice"
                t-att-class="{ highlight: currentOrder.is_to_invoice() }"
                t-on-click="toggleIsToInvoice">
                <i class="fa fa-file-text-o" /> Factura
            </div>
        </xpath>
    </t>

</templates>
