<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_company_form">
      <field name="name">res.company.form.inherit</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form" />
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook/page" position="after">
          <page string="Servicio API's">
            <group>
              <group>
                <field name="busqueda_ruc"/>
                <field name="token_apisperu" attrs="{'invisible': ['|', ('busqueda_ruc', '=', 'apiperu'), ('busqueda_ruc', '=', 'sinapi')]}"/>
                <field name="token_apiperu" attrs="{'invisible': ['|', ('busqueda_ruc', '=', 'apisperu'), ('busqueda_ruc', '=', 'sinapi')]}"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>